<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="자동보기 시작"
            android:layout_weight="1"
            android:id="@+id/btnStart"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:text="자동보기 정지"
            android:layout_weight="1"
            android:id="@+id/btnStop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/resultView"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_weight="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic1"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic2"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic3"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView3"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic4"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView4"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic5"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic6"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView6"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic7"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView7"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic8"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView8"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic9"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgView9"/>

    </ViewFlipper>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="돌아가기" />

</LinearLayout>